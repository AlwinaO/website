.post-viewer
  .post-html
    = raw post.html
  - if post.edited?
    %p.post-status (edited)
  - if post.user == current_user
    = link_to "Edit", "#", class: "link js-edit-discussion-post"
.post-editor
  = form_for post, url: my_discussion_post_path(post), remote: true do |f|
    = f.text_area :content
    = f.submit "Update", class: "pure-button button-primary", data: { "disable-with": "Saving..." }
    = link_to "Cancel", "#", class: "pure-button js-show-discussion-post"
